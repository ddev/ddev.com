---
import { getSponsorshipData } from "../lib/api";

const data = await getSponsorshipData();
const goal = data?.current_goal?.target_amount || 12000;
const income = data?.total_monthly_average_income || 0;
const percentage = Math.min((income / goal) * 100, 100).toFixed(0);

function formatCurrency(value: number): string {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
    minimumFractionDigits: 0,
    maximumFractionDigits: 0,
  }).format(value);
}
---

<style>
  .ddev-sponsor-us-banner {
    --ddev-sub-color-blue: #02a8e2;
    --ddev-sub-color-blue-button: #027ba7;
    --ddev-sub-color-blue-button-hover: #015471;
    --ddev-sub-color-black: #1e2127;
    --ddev-sub-color-white: #ffffff;
    --ddev-sub-spacing: 0.5rem;
    font-family: var(--default-font-family, ui-sans-serif, system-ui, sans-serif);
    background: var(--ddev-sub-color-black);
    color: var(--ddev-sub-color-white);
    padding: var(--ddev-sub-spacing) 1rem;
    display: block;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }

  .ddev-sponsor-us-banner *,
  .ddev-sponsor-us-banner *::before,
  .ddev-sponsor-us-banner *::after {
    box-sizing: border-box;
  }

  .ddev-sponsor-us-banner__inner {
    max-width: 57rem;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .ddev-sponsor-us-banner__content {
    flex-grow: 1;
    min-width: 0;
  }

  .ddev-sponsor-us-banner__desktop-layout {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .ddev-sponsor-us-banner__mobile-layout {
    display: none;
  }

  .ddev-sponsor-us-banner__raised,
  .ddev-sponsor-us-banner__goal {
    font-size: 14px;
    font-weight: bold;
    white-space: nowrap;
  }

  .ddev-sponsor-us-banner__percent {
    font-size: 12px;
    font-weight: normal;
  }

  .ddev-sponsor-us-banner__cta {
    font-size: 12px;
    font-weight: bold;
  }

  .ddev-sponsor-us-banner__progress-container {
    flex-grow: 1;
    min-width: 120px;
  }

  .ddev-sponsor-us-banner__progress {
    height: 5px;
    border-radius: 3px;
    background: rgba(255,255,255,0.2);
    overflow: hidden;
    margin: 4px 0;
  }

  .ddev-sponsor-us-banner__progress-text {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    margin-bottom: 4px;
  }

  .ddev-sponsor-us-banner__fill {
    height: 100%;
    background: var(--ddev-sub-color-blue);
    width: 0;
    transition: width 0.5s ease;
  }

  .ddev-sponsor-us-banner__amounts {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.25rem;
  }

  .ddev-sponsor-us-banner__meta {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    margin-top: 0.25rem;
  }

  .ddev-sponsor-us-banner__link {
    background-color: var(--ddev-sub-color-blue-button);
    color: var(--ddev-sub-color-white);
    padding: 0.4rem 0.8rem;
    border-radius: 4px;
    border: none;
    font-weight: bold;
    cursor: pointer;
    text-decoration: none;
    white-space: nowrap;
    text-align: center;
    transition: background-color 0.2s ease;
    font-size: 14px;
  }

  .ddev-sponsor-us-banner__link:hover {
    background-color: var(--ddev-sub-color-blue-button-hover);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .ddev-sponsor-us-banner__desktop-layout {
      display: none;
    }

    .ddev-sponsor-us-banner__mobile-layout {
      display: block;
    }

    .ddev-sponsor-us-banner__progress {
      margin: 2px 0;
    }
  }

  @media (max-width: 480px) {
    .ddev-sponsor-us-banner__inner {
      flex-direction: column;
      align-items: stretch;
      gap: 0.5rem;
    }

    .ddev-sponsor-us-banner__link {
      width: 100%;
    }
  }

  @media (max-width: 320px) {
    .ddev-sponsor-us-banner__meta {
      flex-direction: column;
      gap: 0.25rem;
      text-align: center;
    }
  }
</style>

<div class="ddev-sponsor-us-banner">
  <div class="ddev-sponsor-us-banner__inner">
    <div class="ddev-sponsor-us-banner__content">
      <!-- Desktop Layout -->
      <div class="ddev-sponsor-us-banner__desktop-layout">
        <span class="ddev-sponsor-us-banner__raised">Raised: {formatCurrency(income)}</span>
        <div class="ddev-sponsor-us-banner__progress-container">
          <div class="ddev-sponsor-us-banner__progress-text">
            <span class="ddev-sponsor-us-banner__percent">{percentage}% of monthly goal</span>
            <span class="ddev-sponsor-us-banner__cta">Help us cross the finish line!</span>
          </div>
          <div class="ddev-sponsor-us-banner__progress">
            <div class="ddev-sponsor-us-banner__fill" style={{ width: `${percentage}%` }}></div>
          </div>
        </div>
        <span class="ddev-sponsor-us-banner__goal">Goal: {formatCurrency(goal)}</span>
      </div>

      <!-- Mobile Layout -->
      <div class="ddev-sponsor-us-banner__mobile-layout">
        <div class="ddev-sponsor-us-banner__amounts">
          <span class="ddev-sponsor-us-banner__raised">Raised: {formatCurrency(income)}</span>
          <span class="ddev-sponsor-us-banner__goal">Goal: {formatCurrency(goal)}</span>
        </div>
        <div class="ddev-sponsor-us-banner__progress">
          <div class="ddev-sponsor-us-banner__fill" style={{ width: `${percentage}%` }}></div>
        </div>
        <div class="ddev-sponsor-us-banner__meta">
          <span class="ddev-sponsor-us-banner__percent">{percentage}% of monthly goal</span>
          <span class="ddev-sponsor-us-banner__cta">Help us cross the finish line!</span>
        </div>
      </div>
    </div>
    <a class="ddev-sponsor-us-banner__link" href="https://github.com/sponsors/ddev" target="_blank">Sponsor Now</a>
  </div>
</div>

<script is:inline>
  const goal = 12000;
  const cacheKey = 'ddevSponsorshipData';
  const cacheTTL = 12 * 60 * 60 * 1000; // 12 hours in ms
  const apiUrl = '/s/sponsorship-data.json';

  function formatCurrency(value) {
    return new Intl.NumberFormat('en-US', {
      style: 'currency',
      currency: 'USD',
      minimumFractionDigits: 0,
      maximumFractionDigits: 0
    }).format(value);
  }

  function updateUI(data) {
    try {
      const income = data.total_monthly_average_income;
      const currentGoal = data.current_goal?.target_amount || goal;
      const percentage = Math.min((income / currentGoal) * 100, 100).toFixed(0);

      document.querySelectorAll('.ddev-sponsor-us-banner__raised').forEach(el => {
        el.textContent = `Raised: ${formatCurrency(income)}`;
      });
      document.querySelectorAll('.ddev-sponsor-us-banner__goal').forEach(el => {
        el.textContent = `Goal: ${formatCurrency(currentGoal)}`;
      });
      document.querySelectorAll('.ddev-sponsor-us-banner__percent').forEach(el => {
        el.textContent = `${percentage}% of monthly goal`;
      });
      document.querySelectorAll('.ddev-sponsor-us-banner__fill').forEach(el => {
        el.style.width = `${percentage}%`;
      });
    } catch (error) {
      console.error('Error updating UI:', error);
    }
  }

  async function fetchSponsorshipData() {
    try {
      const response = await fetch(apiUrl);
      if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);

      const data = await response.json();
      const cacheData = {
        timestamp: Date.now(),
        data: data
      };

      localStorage.setItem(cacheKey, JSON.stringify(cacheData));
      updateUI(data);
    } catch (error) {
      console.error('Failed to fetch sponsorship data:', error);
    }
  }

  function loadSponsorshipData() {
    const cached = localStorage.getItem(cacheKey);
    const now = Date.now();

    if (cached) {
      try {
        const parsed = JSON.parse(cached);
        if (now - parsed.timestamp < cacheTTL) {
          updateUI(parsed.data);
          return;
        }
      } catch (error) {
        console.error('Error parsing cached data:', error);
      }
    }

    fetchSponsorshipData();
  }

  loadSponsorshipData();
</script>
